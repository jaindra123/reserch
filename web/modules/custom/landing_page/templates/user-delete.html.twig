<div class="main-content3">
    <div class="container">
        <h1>User Delete Page</h1>

        <div class="user-delete-wrapper">
            <form action="" method="post">
                <h45>Do you want to delete the account ?</h5>
                <div class="mt-3 mb-4">
                    <div class="custom-control custom-radio mb-2">
                        <input type="radio" name="confirm_deletion" id="yes" value="yes" class="custom-control-input" required>
                        <label class="custom-control-label" for="yes">Yes</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" name="confirm_deletion" id="no" value="no" class="custom-control-input" required>
                        <label class="custom-control-label" for="no">No</label>
                    </div>
                </div>
                <input type="submit" class="button js-form-submit form-submit" value="Confirm" />
            </form>   
        </div>
    </div>
</div>
