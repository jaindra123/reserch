                        {% endfor %}

                      {% elseif 'instructor' in user.getroles(TRUE) %} 
                        <option value="/admin-hub" >Institution admin hub</option>
                        
                         {% for card_group in landing_page['card_group'] %}
                           <option value="{{ card_group['link'] }}" {{ current_page==card_group['link'] ? 'selected' : '' }}  >{{ card_group['title'] }}</option>
                         {% endfor %}

                        {# <option value="/LTI-Integration"   {{ current_page=='/LTI-Integration' ? 'selected' : '' }}  >Create LTI keys</option>
                        <option value="/Create-LTI-content-links"   {{ current_page=='/Create-LTI-content-links' ? 'selected' : '' }} >Create LTI content links</option>
