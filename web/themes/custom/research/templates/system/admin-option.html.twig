                       <option value="/admin-hub" >Instructor hub</option>
                         <option value="/LTI-Integration"   {{ current_page=='/LTI-Integration' ? 'selected' : '' }}  >Create LTI keys</option>
                      <option value="/Create-LTI-content-links" {{ current_page=='/Create-LTI-content-links' ? 'selected' : '' }} >Create LTI content links</option>
                   {% endif%}
