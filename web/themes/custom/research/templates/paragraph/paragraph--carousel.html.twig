
<div class="carousel-wrapper mt-5">
    <h2 class="carousel-title">
        {{ content.field_carousel_title }}
    </h2>
    <div id="carouselExampleIndicators" class="carousel slide card-bodys" data-ride="carousel">
        {% if total_slides %}
        {% set total_slides = total_slides - 1 %}
        <ol class="carousel-indicators">
            {% for key in 0..total_slides %}
                {% if loop.first %}
                    {% set class = 'active' %}
                {% else %}
                    {% set class = '' %}
                {% endif %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{key}}" class="{{class}}"></li>
            {% endfor %}
        </ol>
        {% endif %}
    
        <div class="carousel-inner">
            {{ content.field_carousel_slide }}
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
</div>