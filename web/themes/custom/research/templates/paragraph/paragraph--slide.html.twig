{% if paragraph.index == 0 %}
    {% set class = 'active' %}
{% else %}
    {% set class = '' %}
{% endif %}
<div class="carousel-item {{class}}">
    <div class="row">
        <div class="col-md-6">
            <h3 class="slide-title">
                {{ content.field_slide_title }}
            </h3>
            <div class="slide-text">
                {{ content.field_slide_text }}
            </div>
        </div>
        <div class="col-md-6">
            {{ content.field_slide_image }}
        </div>
    </div>
</div>